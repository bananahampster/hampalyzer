{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "./dist/",
        "strict": true,
        "noFallthroughCasesInSwitch": true
    },
    "files": [
        "./node_modules/@types/node/index.d.ts",
        "./node_modules/@types/express/index.d.ts"
    ],
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
    ],
    "forceConsistentCasingInFileNames": true,
}